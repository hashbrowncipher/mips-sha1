#define hexify
	@string = $s0
	@mask = $s1
	@trimmed = $s2
	@flag = $s3
	@count = $s4
	
	li		@count, 8

loop:
	and		@trimmed, %1, @mask
	slti	@flag, @trimmed, 10
	bne		@flag, $0, skip_add
	addi	@trimmed, @trimmed, 7
skip_add:
	addi	@trimmed, @trimmed, 48
	sb		@trimmed, 0(@string)

	srl		%1, %1, 4
	addi	@count, @count, -1
	addi	@string, @string, -1
	bne		@count, $0, loop
#end

