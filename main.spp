.text

	read_whole_file	filename

	beq		$v1, $0, swap_done

	move	$t0, $v0
	addu	$t1, $v0, $v1

swap_loop:

	lw		$t2, 0($t0)

	sb		$t2, 3($t0)
	srl		$t2, $t2, 8

	sb		$t2, 2($t0)
	srl		$t2, $t2, 8

	sb		$t2, 1($t0)
	srl		$t2, $t2, 8

	sb		$t2, 0($t0)

	addi	$t0, $t0, 4
	bgt		$t1, $t0, swap_loop

swap_done:

	move	$a0, $v0
	srl		$a1, $v1, 29	#load the top three bits into hlength
	sll		$a2, $v1, 3		#load the bottom 29 bits into llength

	sha1

	addiu	$s0, $sp, -5
	sb		$0, 1($s0)
	
	li		$s1, 15

	hexify	$t4
	hexify	$t3
	hexify	$t2
	hexify	$t1
	hexify	$t0

	addiu	$a0, $s0, 1
	print_string
	
	exit